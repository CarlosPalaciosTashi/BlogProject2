@model BlogProject2.Core.Category

@{
    ViewData["Title"] = "Create Category";
}

<br />
<br />

<h3 class="text-center">Create category</h3>

<form method="POST" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">
            
                <div class="form-group row createCont">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" placeholder="Introduce name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row createCont">
                    <div class="col-4">
                        <label asp-for="Order"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Order" class="form-control" placeholder="Introduce name">
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                </div>
            
            <div class="form-group-row createCont">
                <div class="col-8">
                    <partial name="_ViewCreateReturn" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}